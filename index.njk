<section>
{% for post in collections.post | reverse %}
  <article class="post">
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <p><small><time>{{ post.date | dateDisplay("LLL d, y") }}</time></small></p>
    <p class="post-summary">{{ post.data.summary | safe }}</p>
  </article>
{% endfor %}
</section>
